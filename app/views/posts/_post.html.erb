<div class="media">
  <%= render partial: 'votes/voting', locals: { post: post } %>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to post.title, topic_post_path(post.topic, post) %>
    </h4>
    <small>
      submitted <%= time_ago_in_words(post.created_at) %> ago by <% avatar_url = post.user.avatar_url(30) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= link_to image_tag(avatar_url, class: 'media-object'), user_path(post.user) %>
        </div>
      <% end %><br>
      <%= post.comments.count %> Comments
    </small>
  </div>
</div>
